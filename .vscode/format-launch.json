{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows Format",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\main.py",
            "console": "integratedTerminal",
            "python": "\\path\\to\\env\\python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--conf", "${workspaceFolder}\\src\\configuration.json",
                "--save", "${workspaceFolder}\\results\\"
            ]
        },
        {
            "name": "Linux Format",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "console": "integratedTerminal",
            "python": "/path/to/env/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--conf", "${workspaceFolder}/src/configuration.json",
                "--save", "${workspaceFolder}/results/"
            ]
        }
    ]
}